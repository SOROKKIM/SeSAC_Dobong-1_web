<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>로그인페이지</title>
    <!-- axios CDN -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <form name="login">
      <label>
        아이디:
        <input type="text" name="id" required />
      </label>
      <br />
      <br />

      <label>
        비밀번호:
        <input type="password" name="pw" required />
      </label>
      <br />
      <br />

      <button type="button" onclick="Post()">로그인</button>
      <button type="button" onclick="">로그인</button>
      <br />
      <br />
      <!-- 동적폼 전송 결과를 보여줄 곳 -->
      <div class="result"></div>
    </form>

    <script>
      const resultBox = document.querySelector(".result");

      async function Post() {
        const form = document.forms["login"];
        const data = {
          id: form.id.value,
          pw: form.pw.value,
        };

        //유효성검증
        if (!form.id.checkValidity() || !form.pw.checkValidity()) {
          resultBox.textContent = "id 와 pw는 필수값입니다.";
          resultBox.style.color = "green";

          return;
        }

        try {
          const response = await axios({
            method: "post",
            url: "/",
            data: data,
          });
          console.log(response.data);
          if (response.data.success) {
            resultBox.style.color = "blue";
            resultBox.innerText = `${response.data.message}`;
          } else {
            resultBox.style.color = "red";
            resultBox.innerText = `${response.data.message}`;
          }
        } catch (err) {
          console.log(err);
        }
      }
    </script>
  </body>
</html>
